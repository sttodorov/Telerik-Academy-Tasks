doctype
html
    head
        title Telerik Academy Events
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav
        .container
            .navbar-header
                a.navbar-brand(href="/") Telerik Academy Events
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/") Home
                    if (currentUser)
                        li
                            a(href="/profile") #{currentUser.username}
                        li
                            a(href="/events") Upcomming Events
                        li
                            a(href="/eventsPast") Past Events
                        li
                            a(href="/eventsCreate") Create Event
                        li
                            a(href="/logout") Logout
                    else
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}
        .container
            if (successMessage)
                .alert.alert-success #{successMessage}

            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2014

        include scripts