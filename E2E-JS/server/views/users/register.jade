extends ../shared/layout

block main-content
    form(method="post" enctype="multipart/form-data" id="form-register")
        label(for="username") Username
        input(id="username" class="form-control" type="text" name="username" placeholder="Username" required="required")
        br
        label(for="password") Password
        input(id="password" class="form-control" type="password" name="password" placeholder="Password" required="required")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password" required="required")
        br
        label(for="avatar") Avatar
        input(id="avatar" class="form-control" type="file" name="avatar" accept="image/*")
        br

        label(for="firstName") First Name
        input(id="firstName" class="form-control" type="text" name="firstName" placeholder="First Name" required="required")
        br
        label(for="lastName") Last Name
        input(id="lastName" class="form-control" type="text" name="lastName" placeholder="Last Name" required="required")
        br
        label(for="phoneNumber") Phone Number
        input(id="phoneNumber" class="form-control" type="text" name="phoneNumber" placeholder="Phone Number")
        br
        label(for="emailAddress") Email
        input(id="emailAddress" class="form-control" type="text" name="emailAddress" placeholder="Email Address" required="required")
        br

        label(for="socialLink") Social link
        input(id="socialLink" class="form-control" type="text" name="socialLink_0" placeholder="Social Link")
        br

        label(for="Telerik Academy Initiative") Initiative
        select(id="initiative" class="form-control" name="initiative_0") Telerik Academy Initiative
            option( value="SoftwareAcademy") Software Academy
            option( value="SchoolAcademy") School Academy
            option( value="AlgoAcademy") Algo Academy
            option( value="KidsAcademy") Kids Academy
        br
        select(id="initiativeYear" class="form-control" name="initiativeYear_0") Initiative Year
            option( value="2010") Started 2010
            option( value="2011") Started 2011
            option( value="2012") Started 2012
            option( value="2013") Started 2013
        br
        input(type="submit" class="btn btn-lg" value="Register")
        br
    button(id="add-initiative") Add Initiative
    button(id="add-link") Add Social Link

block page-scripts
    script(src="js/register.js")